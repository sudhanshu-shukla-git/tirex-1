# TiRex Offline Configuration
# Copy this file to .env and update paths as needed

# Path to offline weights directory
# Options:
#   1. ~/.cache/tirex/weights (default)
#   2. /path/to/custom/weights
#   3. /mnt/shared/models/tirex_weights (for shared networks)
TIREX_WEIGHTS_PATH=~/.cache/tirex/weights

# Optional: Disable CUDA backend (useful for CPU-only systems)
# TIREX_NO_CUDA=true

